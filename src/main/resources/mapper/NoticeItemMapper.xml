<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auction.mapper.NoticeItemMapper">

    <resultMap id="BaseResultMap" type="com.auction.entity.NoticeItem">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="category_id" property="categoryId" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content_html" property="contentHtml" jdbcType="LONGVARCHAR"/>
        <result column="sort_order" property="sortOrder" jdbcType="INTEGER"/>
        <result column="enabled" property="enabled" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, category_id, title, content_html, sort_order, enabled, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.auction.entity.NoticeItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notice_item (category_id, title, content_html, sort_order, enabled, create_time, update_time)
        VALUES (#{categoryId}, #{title}, #{contentHtml}, #{sortOrder}, #{enabled, jdbcType=TINYINT}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.auction.entity.NoticeItem">
        UPDATE notice_item
        <set>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="contentHtml != null">content_html = #{contentHtml},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="enabled != null">enabled = #{enabled ? 1 : 0},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM notice_item WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM notice_item WHERE id = #{id}
    </select>

    <select id="selectByCategoryId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM notice_item
        WHERE category_id = #{categoryId}
        ORDER BY enabled DESC, sort_order ASC, id ASC
    </select>

    <select id="selectEnabledAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM notice_item
        WHERE enabled = 1
        ORDER BY sort_order ASC, id ASC
    </select>

</mapper>


