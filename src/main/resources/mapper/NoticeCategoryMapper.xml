<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auction.mapper.NoticeCategoryMapper">

    <resultMap id="BaseResultMap" type="com.auction.entity.NoticeCategory">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="sort_order" property="sortOrder" jdbcType="INTEGER"/>
        <result column="enabled" property="enabled" jdbcType="TINYINT"/>
        <result column="content_html" property="contentHtml" jdbcType="LONGVARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, sort_order, enabled, content_html, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.auction.entity.NoticeCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notice_category (name, sort_order, enabled, content_html, create_time, update_time)
        VALUES (#{name}, #{sortOrder}, #{enabled, jdbcType=TINYINT}, #{contentHtml}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.auction.entity.NoticeCategory">
        UPDATE notice_category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="enabled != null">
                <choose>
                    <when test="enabled == true">enabled = 1,</when>
                    <when test="enabled == false">enabled = 0,</when>
                </choose>
            </if>
            <if test="contentHtml != null">content_html = #{contentHtml},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM notice_category WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM notice_category WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM notice_category
        ORDER BY enabled DESC, sort_order ASC, id ASC
    </select>

</mapper>


